/**index.wxss**/
page{
  background-color: #f0f0f0;
}
.clear{
  clear: both;
}
.index_home{
  width: 100%;
  height: auto;
}
.index_head{
  width: 100%;
  height: 140rpx;
  background-color: #0D6FB8;
}
.index_head_top{
  width: 100%;
  height: 60rpx;
}
.index_head_top>image{
  width: 20px;
  height: 20px;
  margin-left: 5px;
  position: relative;
  top: 10rpx;
}
.index_head_top>text{
  color: #ffffff;
  font-size: 28rpx;
}
.index_head_seach{
  width: 100%;
  height: 80rpx;
}
.index_head_seach>view{
  width: 600rpx;
  height: 60rpx;
  margin-left: 10%;
  border-radius: 30rpx;
  margin-top: 6rpx;
  font-size: 28rpx;
  background-color: #ffffff;
  text-align: center;
  color:#666666;
}
.index_head_seach>view>image{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
}
.index_body{
  width: 100%;
  height: auto;
}
.index_body_list{
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  background-color: #ffffff;
  box-shadow: 0px 0px 3px #d4d4d4;
}
.index_body_list_left{
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  float: left;
}
.index_body_list_left>image{
  width: 100%;
  height: 100%;
}
.index_body_list_right{
  width: 480rpx;
  height: 160rpx;
  margin-left: 20rpx;
  float: left;
}
.index_body_list_right_top{
  font-size: 30rpx;
}
.index_body_list_right_top>text{
  font-size: 24rpx;
  float: right;
}
.index_body_list_right_center>image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.index_body_list_right_center_score{
  font-size: 26rpx;
  color: #FF7505;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.index_body_list_right_center_money{
  font-size: 24rpx;
  color: #666666;
}
.index_body_list_right_bottom{
  font-size: 24rpx;
  color: #666666;
}